# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection
# Get your MongoDB URI from MongoDB Atlas (https://cloud.mongodb.com)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/citizenvoice

# JWT Configuration
# Generate a strong secret key (at least 32 characters)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=30d

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Google OAuth (Optional - leave empty to disable Google login)
GOOGLE_CLIENT_ID=your_google_client_id_here
